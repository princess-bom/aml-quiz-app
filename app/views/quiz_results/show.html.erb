<% content_for :page_title, "퀴즈 결과" %>

<!-- Result Header -->
<div class="dashboard-header text-center">
  <div class="text-center" style="margin-bottom: var(--space-6);">
    <div style="font-size: 4rem; margin-bottom: var(--space-4);">🎉</div>
    <h1 class="dashboard-title">최종 점수: <%= @session_stats[:score] || 85 %>점</h1>
    <div class="badge badge--score-<%= (@session_stats[:score] || 85) >= 90 ? 'excellent' : (@session_stats[:score] || 85) >= 80 ? 'good' : 'fair' %>" style="margin-top: var(--space-2);">
      [<%= (@session_stats[:score] || 85) >= 90 ? '우수 등급' : (@session_stats[:score] || 85) >= 80 ? '양호 등급' : '보통 등급' %>]
    </div>
  </div>
</div>

<!-- Detailed Stats -->
<div class="dashboard-stats">
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">정답</span>
      <span class="dashboard-stat-icon">✅</span>
    </div>
    <div class="dashboard-stat-value"><%= @session_stats[:correct_answers] || 17 %>개 (<%= @session_stats[:accuracy] || 85 %>%)</div>
  </div>
  
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">오답</span>
      <span class="dashboard-stat-icon">❌</span>
    </div>
    <div class="dashboard-stat-value"><%= @session_stats[:wrong_answers] || 3 %>개 (<%= 100 - (@session_stats[:accuracy] || 85) %>%)</div>
  </div>
  
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">소요시간</span>
      <span class="dashboard-stat-icon">⏱️</span>
    </div>
    <div class="dashboard-stat-value"><%= @session_stats[:duration] || 25 %>분</div>
  </div>
  
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">평균 응답시간</span>
      <span class="dashboard-stat-icon">📊</span>
    </div>
    <div class="dashboard-stat-value">1.2분</div>
  </div>
</div>

<!-- Question Review -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">📋 문제별 결과 검토</h3>
  </div>
  
  <div class="card-content">
    <div class="collapsible">
      <div class="collapsible-trigger">
        <span class="collapsible-title">문제별 상세 결과</span>
        <span class="collapsible-icon">▼</span>
      </div>
      <div class="collapsible-content">
        <div class="collapsible-content-inner">
          
          <!-- Sample Quiz Results -->
          <div class="quiz-result-item">
            <div class="quiz-result-header">
              <span class="quiz-result-number">✅ Q1</span>
              <span class="quiz-result-answer">A ➤ A ✓</span>
            </div>
          </div>
          
          <div class="quiz-result-item">
            <div class="quiz-result-header">
              <span class="quiz-result-number">✅ Q2</span>
              <span class="quiz-result-answer">C ➤ C ✓</span>
            </div>
          </div>
          
          <div class="quiz-result-item incorrect">
            <div class="quiz-result-header">
              <span class="quiz-result-number">❌ Q3</span>
              <span class="quiz-result-answer">B ➤ C ✗</span>
            </div>
          </div>
          
          <div class="quiz-result-item">
            <div class="quiz-result-header">
              <span class="quiz-result-number">✅ Q4</span>
              <span class="quiz-result-answer">D ➤ D ✓</span>
            </div>
          </div>
          
          <div class="quiz-result-item incorrect">
            <div class="quiz-result-header">
              <span class="quiz-result-number">❌ Q5</span>
              <span class="quiz-result-answer">A ➤ B ✗</span>
            </div>
          </div>
          
          <div class="text-center" style="margin-top: var(--space-4);">
            <button class="button button--outline button--sm">... 더보기</button>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Improvement Suggestions -->
<div class="alert alert--quiz-suggestion">
  <div class="alert-content">
    <div class="alert-icon">⚠️</div>
    <div class="alert-text">
      <h3 class="alert-title">개선 제안</h3>
      <ul style="margin: var(--space-2) 0; padding-left: var(--space-4);">
        <li>• 오답 노트 3개 추가됨</li>
        <li>• 고객확인제도 복습 권장</li>
        <li>• 실무사례 학습 필요</li>
      </ul>
    </div>
  </div>
</div>

<!-- Action Buttons -->
<div class="button-group button-group--quiz-actions" style="margin-top: var(--space-6);">
  <%= link_to quiz_selection_path, class: "button button--retry-quiz button--lg" do %>
    <span>다시풀기</span>
  <% end %>
  
  <%= link_to quiz_selection_path, class: "button button--outline button--lg" do %>
    <span>다른퀴즈</span>
  <% end %>
  
  <%= link_to dashboard_path, class: "button button--home button--lg" do %>
    <span>홈으로돌아가기</span>
  <% end %>
</div>

<style>
.quiz-result-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-3);
  margin-bottom: var(--space-2);
  border: 1px solid var(--success-200);
  border-radius: var(--radius-md);
  background: var(--success-50);
}

.quiz-result-item.incorrect {
  border-color: var(--error-200);
  background: var(--error-50);
}

.quiz-result-header {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  width: 100%;
}

.quiz-result-number {
  font-weight: var(--font-bold);
  font-size: var(--text-sm);
  min-width: 60px;
}

.quiz-result-answer {
  font-family: 'Monaco', 'Menlo', monospace;
  font-size: var(--text-sm);
  color: var(--text-secondary);
}

.alert--quiz-suggestion {
  background: var(--warning-50);
  border-color: var(--warning-300);
  color: var(--warning-800);
}

.button-group--quiz-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-3);
}

@media (max-width: 768px) {
  .button-group--quiz-actions {
    grid-template-columns: 1fr;
  }
  
  .dashboard-stats {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .quiz-result-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-1);
  }
}
</style>