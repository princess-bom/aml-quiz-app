<% content_for :page_title, "퀴즈 결과" %>

<!-- Result Header -->
<div class="dashboard-header text-center">
  <div class="text-center" style="margin-bottom: var(--space-6);">
    <div style="font-size: 4rem; margin-bottom: var(--space-4);">
      <% if @final_score >= 80 %>
        🎉
      <% elsif @final_score >= 60 %>
        👍
      <% else %>
        💪
      <% end %>
    </div>
    <h1 class="dashboard-title">최종 점수: <%= @final_score %>점</h1>
    <div class="badge badge--score-<%= @grade == 'A' ? 'excellent' : @grade == 'B' ? 'good' : @grade == 'C' ? 'fair' : 'poor' %>" style="margin-top: var(--space-2);">
      [<%= @grade %>등급]
    </div>
  </div>
</div>

<!-- Detailed Stats -->
<div class="dashboard-stats">
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">정답</span>
      <span class="dashboard-stat-icon">✅</span>
    </div>
    <div class="dashboard-stat-value"><%= @correct_answers %>개 (<%= (@correct_answers.to_f / @total_questions * 100).round %>%)</div>
  </div>
  
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">오답</span>
      <span class="dashboard-stat-icon">❌</span>
    </div>
    <div class="dashboard-stat-value"><%= @total_questions - @correct_answers %>개 (<%= ((@total_questions - @correct_answers).to_f / @total_questions * 100).round %>%)</div>
  </div>
  
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">소요시간</span>
      <span class="dashboard-stat-icon">⏱️</span>
    </div>
    <% duration = ((@quiz_session['completed_at'] || Time.current.to_i) - @quiz_session['started_at']) / 60 %>
    <div class="dashboard-stat-value"><%= duration.round %>분</div>
  </div>
  
  <div class="dashboard-stat-card">
    <div class="dashboard-stat-header">
      <span class="dashboard-stat-title">평균 응답시간</span>
      <span class="dashboard-stat-icon">📊</span>
    </div>
    <div class="dashboard-stat-value"><%= (duration / @total_questions).round(1) %>분</div>
  </div>
</div>

<!-- Question Review -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">📋 문제별 결과 검토</h3>
  </div>
  
  <div class="card-content">
    <div class="collapsible">
      <div class="collapsible-trigger">
        <span class="collapsible-title">문제별 상세 결과 (<%= @correct_answers %>/<%= @total_questions %>)</span>
        <span class="collapsible-icon">▼</span>
      </div>
      <div class="collapsible-content">
        <div class="collapsible-content-inner">
          
          <% @questions_with_answers.each_with_index do |qa, index| %>
            <% question = qa[:question] %>
            <% user_answer = qa[:user_answer] %>
            <% explanation = qa[:explanation] %>
            <% is_correct = user_answer['is_correct'] %>
            
            <div class="quiz-result-item <%= 'incorrect' unless is_correct %>">
              <div class="quiz-result-header">
                <span class="quiz-result-number">
                  <%= is_correct ? '✅' : '❌' %> Q<%= index + 1 %>
                </span>
                <span class="quiz-result-question">
                  <%= truncate(question['question_text'], length: 50) %>
                </span>
              </div>
              <div class="quiz-result-answer">
                내 답: <%= ('A'..'E').to_a[user_answer['selected_answer'].to_i - 1] %>
                <% unless is_correct %>
                  → 정답: <%= ('A'..'E').to_a[question['correct_answer'].to_i - 1] %>
                <% end %>
              </div>
              <% if !is_correct && explanation %>
                <div class="quiz-result-explanation">
                  <%= truncate(explanation['correct_reason'], length: 100) %>
                </div>
              <% end %>
            </div>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Improvement Suggestions -->
<div class="alert alert--quiz-suggestion">
  <div class="alert-content">
    <div class="alert-icon">💡</div>
    <div class="alert-text">
      <h3 class="alert-title">학습 제안</h3>
      <ul style="margin: var(--space-2) 0; padding-left: var(--space-4);">
        <% @suggestions.each do |suggestion| %>
          <li>• <%= suggestion %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- Action Buttons -->
<div class="button-group button-group--quiz-actions" style="margin-top: var(--space-6);">
  <%= form_with url: start_quiz_path, method: :post, local: true do |f| %>
    <%= f.hidden_field :subject_id, value: @quiz_session['subject_id'] %>
    <%= f.hidden_field :difficulty, value: @quiz_session['difficulty'] %>
    <%= f.submit "다시풀기", class: "button button--retry-quiz button--lg" %>
  <% end %>
  
  <%= link_to quiz_selection_path, class: "button button--outline button--lg" do %>
    <span>다른퀴즈</span>
  <% end %>
  
  <%= link_to dashboard_path, class: "button button--home button--lg" do %>
    <span>홈으로</span>
  <% end %>
</div>

<style>
.quiz-result-item {
  padding: var(--space-4);
  margin-bottom: var(--space-3);
  border: 1px solid var(--success-200);
  border-radius: var(--radius-md);
  background: var(--success-50);
}

.quiz-result-item.incorrect {
  border-color: var(--error-200);
  background: var(--error-50);
}

.quiz-result-header {
  display: flex;
  align-items: flex-start;
  gap: var(--space-3);
  margin-bottom: var(--space-2);
}

.quiz-result-number {
  font-weight: var(--font-bold);
  font-size: var(--text-sm);
  min-width: 60px;
}

.quiz-result-question {
  flex: 1;
  font-size: var(--text-sm);
  line-height: 1.4;
}

.quiz-result-answer {
  font-family: 'Monaco', 'Menlo', monospace;
  font-size: var(--text-sm);
  color: var(--text-secondary);
  margin-left: 60px;
}

.quiz-result-explanation {
  margin-top: var(--space-2);
  margin-left: 60px;
  font-size: var(--text-sm);
  color: var(--gray-600);
  font-style: italic;
}

.alert--quiz-suggestion {
  background: var(--blue-50);
  border-color: var(--blue-300);
  color: var(--blue-800);
}

.badge--score-excellent {
  background: var(--success-100);
  color: var(--success-800);
}

.badge--score-good {
  background: var(--blue-100);
  color: var(--blue-800);
}

.badge--score-fair {
  background: var(--warning-100);
  color: var(--warning-800);
}

.badge--score-poor {
  background: var(--error-100);
  color: var(--error-800);
}

.button-group--quiz-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-3);
}

@media (max-width: 768px) {
  .button-group--quiz-actions {
    grid-template-columns: 1fr;
  }
  
  .dashboard-stats {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .quiz-result-header {
    flex-direction: column;
    gap: var(--space-1);
  }
  
  .quiz-result-answer,
  .quiz-result-explanation {
    margin-left: 0;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Collapsible functionality
  const trigger = document.querySelector('.collapsible-trigger');
  const content = document.querySelector('.collapsible-content');
  const icon = document.querySelector('.collapsible-icon');
  
  trigger.addEventListener('click', function() {
    const isOpen = content.style.maxHeight;
    
    if (isOpen) {
      content.style.maxHeight = null;
      icon.textContent = '▼';
    } else {
      content.style.maxHeight = content.scrollHeight + 'px';
      icon.textContent = '▲';
    }
  });
});
</script>