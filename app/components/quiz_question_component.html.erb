<div class="max-w-4xl mx-auto p-4">
  <!-- Progress Bar -->
  <div class="mb-6">
    <div class="flex justify-between items-center mb-2">
      <span class="text-sm font-medium text-gray-700">진행률</span>
      <span class="text-sm font-medium text-gray-700"><%= session.progress_percentage %>%</span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-2">
      <div class="bg-blue-600 h-2 rounded-full" style="width: <%= session.progress_percentage %>%"></div>
    </div>
  </div>

  <!-- Quiz Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center space-x-3">
        <span class="text-lg font-semibold text-gray-900">
          문제 <%= session.current_quiz_index + 1 %>
        </span>
        <span class="px-2 py-1 rounded-full text-xs font-medium <%= difficulty_color %>">
          <%= quiz.difficulty&.capitalize || 'Normal' %>
        </span>
      </div>
      <div class="flex items-center space-x-2">
        <svg class="w-4 h-4 #{score_color}" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
        </svg>
        <span class="text-sm font-medium <%= score_color %>">
          <%= quiz.score %>점
        </span>
      </div>
    </div>

    <!-- Question -->
    <div class="mb-6">
      <h2 class="text-xl font-medium text-gray-900 leading-relaxed">
        <%= quiz.question %>
      </h2>
    </div>

    <!-- Answer Form -->
    <% if session.id %>
      <%= form_with url: answer_quiz_path(session.id), method: :post, local: true, 
          data: { controller: "quiz-form" } do |form| %>
        <div class="space-y-3">
          <% quiz.choices.each_with_index do |choice, index| %>
            <div class="relative">
              <%= form.radio_button :answer, choice, 
                  id: "choice_#{index}", 
                  class: "sr-only peer",
                  data: { action: "change->quiz-form#selectChoice" } %>
              <label for="choice_<%= index %>" 
                     class="flex items-center w-full p-4 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 peer-checked:bg-blue-50 peer-checked:border-blue-300 peer-checked:text-blue-900">
                <span class="w-8 h-8 flex items-center justify-center bg-gray-100 rounded-full text-gray-600 mr-3 peer-checked:bg-blue-100 peer-checked:text-blue-700">
                  <%= quiz.choice_label(index) %>
                </span>
                <span class="flex-1"><%= choice %></span>
              </label>
            </div>
          <% end %>
        </div>

        <div class="mt-8 flex justify-between">
          <div class="text-sm text-gray-500">
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= session.remaining_questions %>개 문제 남음
            </span>
          </div>
          
          <%= form.submit "답안 제출", 
              class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed",
              data: { quiz_form_target: "submitButton" },
              disabled: true %>
        </div>
      <% end %>
    <% else %>
      <div class="text-red-600">Error: Session ID is missing</div>
    <% end %>
  </div>

  <!-- Quiz Info -->
  <div class="bg-gray-50 rounded-lg p-4">
    <div class="flex items-center justify-between text-sm text-gray-600">
      <span>
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        제한 시간 없음
      </span>
      <span>
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        정답 확인 후 자동으로 다음 문제로 진행
      </span>
    </div>
  </div>
</div>